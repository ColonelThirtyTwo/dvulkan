{
	"name": "d-vulkan",
	"description": "Auto-generated D bindings for Vulkan",
	"copyright": "Copyright 2015-2016 The Khronos Group Inc.; Copyright 2016, Alex Parrill",
	"authors": ["Alex Parrill"],
	"targetType": "library",
	"license": "BSD 2-clause",
	"configurations": [
		{
			"name": "default",
			"versions": ["DVulkanAllExtensions"]
		},
		{
			"name": "custom-extensions"
		},
		{
			"name": "with-derelict-loader",
			"versions": ["DVulkanLoadFromDerelict", "DVulkanAllExtensions"],
			"dependencies": {
				"derelict-util": "~>2.0.4"
			},
		},
		{
			"name": "with-derelict-loader-custom-extensions",
			"versions": ["DVulkanLoadFromDerelict"],
			"dependencies": {
				"derelict-util": "~>2.0.4"
			},
		},
	],
	"subPackages": [
		{
			"name": "devices",
			"description": "Simple Vulkan example",
			"targetType": "executable",
			"sourceFiles": ["examples/devices.d"],
			"dependencies": {
				"d-vulkan": { "path": "." }
			},
			"subConfigurations": {
				"d-vulkan": "with-derelict-loader"
			}
		},
		{
			"name": "layers",
			"description": "Simple Vulkan example",
			"targetType": "executable",
			"sourceFiles": ["examples/layers.d"],
			"dependencies": {
				"d-vulkan": { "path": "." }
			},
			"versions": ["DVulkanGlobalEnums", "DVulkan_VK_VERSION_1_0"],
			"subConfigurations": {
				"d-vulkan": "with-derelict-loader-custom-extensions"
			}
		}
	]
}
